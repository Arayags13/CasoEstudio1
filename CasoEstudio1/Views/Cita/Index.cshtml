@model CasoEstudio1BLL.Dtos.CitaDto
@{
    ViewData["Title"] = "Gestión de Citas de Lavado";
    var clientes = ViewBag.Clientes as List<CasoEstudio1BLL.Dtos.ClienteDto>;
    var vehiculos = ViewBag.Vehiculos as List<CasoEstudio1BLL.Dtos.VehiculoDto>;
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de Citas de Lavado</h2>
    </div>
    <div class="col-6 text-end">
        <button onclick="abrirModal(0)" class="btn btn-primary">
            <i class="fas fa-plus"></i> Registrar Nueva Cita
        </button>
    </div>
</div>

<div class="p-4 border rounded mt-3">
    <table id="tblCitas" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Vehículo (Placa)</th>
                <th>Fecha Cita</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@* Modal para Crear/Editar Cita (Ventana Modal) *@
<div class="modal fade" id="citaModal" tabindex="-1" aria-labelledby="citaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal">Registrar Cita</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="citaForm">
                    <input type="hidden" id="citaId" value="0" />
                    <input type="hidden" id="estado" value="Ingresada" /> 

                    <div class="mb-3">
                        <label for="clienteId" class="form-label">Cliente</label>
                        <select id="clienteId" class="form-select" required>
                            <option value="">-- Seleccione un Cliente --</option>
                            @if (clientes != null)
                            {
                                foreach (var cliente in clientes)
                                {
                                    <option value="@cliente.Id">@cliente.Nombre @cliente.Apellido (@cliente.Identificacion)</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="vehiculoId" class="form-label">Vehículo</label>
                        <select id="vehiculoId" class="form-select" required>
                            <option value="">-- Seleccione un Vehículo --</option>
                            @if (vehiculos != null)
                            {
                                foreach (var vehiculo in vehiculos)
                                {
                                    <option value="@vehiculo.Id">@vehiculo.Placa - @vehiculo.Marca</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="fechaCita" class="form-label">Fecha y Hora de la Cita</label>
                        <input type="datetime-local" id="fechaCita" class="form-control" required />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" onclick="guardarCita()" class="btn btn-primary">Guardar Cita</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/cita.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>
}