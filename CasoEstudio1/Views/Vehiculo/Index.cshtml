@model CasoEstudio1BLL.Dtos.VehiculoDto
@{
    ViewData["Title"] = "Gestión de Vehículos";
    var clientes = ViewBag.Clientes as List<CasoEstudio1BLL.Dtos.ClienteDto>;
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de Vehículos</h2>
    </div>
    <div class="col-6 text-end">
        <button onclick="abrirModal(0)" class="btn btn-primary">
            <i class="fas fa-plus"></i> Registrar Nuevo Vehículo
        </button>
    </div>
</div>

<div class="p-4 border rounded mt-3">
    <table id="tblVehiculos" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Placa</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Cliente ID</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@* Modal para Crear/Editar Vehículo (Ventana Modal) *@
<div class="modal fade" id="vehiculoModal" tabindex="-1" aria-labelledby="vehiculoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal">Registrar Vehículo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="vehiculoForm">
                    <input type="hidden" id="vehiculoId" value="0" />
                    <div class="mb-3">
                        <label for="placa" class="form-label">Placa</label>
                        <input type="text" id="placa" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="marca" class="form-label">Marca</label>
                        <input type="text" id="marca" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="modelo" class="form-label">Modelo</label>
                        <input type="text" id="modelo" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="clienteId" class="form-label">Cliente Asociado</label>
                        <select id="clienteId" class="form-select" required>
                            <option value="">-- Seleccione un Cliente --</option>
                            @if (clientes != null)
                            {
                                foreach (var cliente in clientes)
                                {
                                    <option value="@cliente.Id">@cliente.Nombre @cliente.Apellido (@cliente.Identificacion)</option>
                                }
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" onclick="guardarVehiculo()" class="btn btn-primary">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/vehiculo.js" asp-append-version="true"></script>
}