@model CasoEstudio1BLL.Dtos.ClienteDto
@{
    ViewData["Title"] = "Gestión de Clientes";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de Clientes</h2>
    </div>
    <div class="col-6 text-end">
        <button onclick="abrirModal(0)" class="btn btn-primary">
            <i class="fas fa-plus"></i> Registrar Nuevo Cliente
        </button>
    </div>
</div>

<div class="p-4 border rounded mt-3">
    <table id="tblClientes" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Identificación</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@* Modal para Crear/Editar Cliente (Ventana Modal) *@
<div class="modal fade" id="clienteModal" tabindex="-1" aria-labelledby="clienteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal">Registrar Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="clienteForm">
                    <input type="hidden" id="clienteId" value="0" />
                    <div class="mb-3">
                        <label for="identificacion" class="form-label">Identificación</label>
                        <input type="text" id="identificacion" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" id="nombre" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="apellido" class="form-label">Apellido</label>
                        <input type="text" id="apellido" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="edad" class="form-label">Edad</label>
                        <input type="number" id="edad" class="form-control" min="1" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" onclick="guardarCliente()" class="btn btn-primary">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/cliente.js" asp-append-version="true"></script>
}